<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/User_Picture_Detail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario: "
        android:id="@+id/User_Full_Name"
        android:layout_below="@+id/User_Picture_Detail"
        android:layout_alignLeft="@+id/User_Picture_Detail"
        android:layout_alignStart="@+id/User_Picture_Detail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono: "
        android:id="@+id/User_Phone_Detail"
        android:layout_below="@+id/User_Full_Name"
        android:layout_alignLeft="@+id/User_Full_Name"
        android:layout_alignStart="@+id/User_Full_Name"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail: "
        android:id="@+id/User_Mail_Detail"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/User_Phone_Detail"
        android:layout_alignStart="@+id/User_Phone_Detail" />

</RelativeLayout>
